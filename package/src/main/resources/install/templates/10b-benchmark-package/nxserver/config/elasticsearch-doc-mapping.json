{
   "_all":{
      "enabled":false
   },
   "dynamic_templates":[
      {
         "no_thumbnail_template":{
            "mapping":{
               "index":false
            },
            "path_match":"thumb:thumbnail.*"
         }
      },
      {
         "no_picture_template":{
            "mapping":{
               "index":false
            },
            "path_match":"picture:views.*"
         }
      },
      {
         "strings":{
            "mapping":{
               "type":"keyword",
               "copy_to":"all_field",
               "ignore_above":256
            },
            "match_mapping_type":"string"
         }
      }
   ],
   "properties":{
      "all:customerAddress":{
         "properties":{
            "city":{
               "type":"keyword",
               "copy_to":[
                  "all_field"
               ],
               "ignore_above":256
            },
            "street":{
               "type":"keyword",
               "copy_to":[
                  "all_field"
               ],
               "ignore_above":256
            }
         }
      },
      "all:customerFirstname":{
         "type":"keyword",
         "copy_to":[
            "all_field"
         ],
         "ignore_above":256
      },
      "all:customerLastname":{
         "type":"keyword",
         "copy_to":[
            "all_field"
         ],
         "ignore_above":256
      },
      "all:customerNumber":{
         "type":"keyword",
         "copy_to":[
            "all_field"
         ],
         "ignore_above":256
      },
      "statement:accountNumber":{
         "type":"keyword",
         "copy_to":[
            "all_field"
         ],
         "ignore_above":256
      },
      "statement:branch":{
         "type":"keyword",
         "copy_to":[
            "all_field"
         ],
         "ignore_above":256
      },
      "statement:statementDate":{
         "type":"date",
         "copy_to":"all_field"
      },
      "statement:paperless":{
         "type":"boolean"
      },
      "all_field":{
         "type":"text",
         "analyzer":"fulltext"
      },
      "dc:created":{
         "type":"date"
      },
      "dc:description":{
         "type":"keyword",
         "fields":{
            "fulltext":{
               "type":"text",
               "boost":1.5,
               "analyzer":"fulltext"
            }
         },
         "copy_to":[
            "all_field"
         ],
         "ignore_above":32765
      },
      "dc:modified":{
         "type":"date"
      },
      "dc:title":{
         "type":"text",
         "fields":{
            "fulltext":{
               "type":"text",
               "boost":2.0,
               "analyzer":"fulltext"
            }
         },
         "copy_to":[
            "all_field"
         ],
         "fielddata":true
      },
      "ecm:acl":{
         "type":"keyword"
      },
      "ecm:binarytext":{
         "type":"text",
         "copy_to":[
            "all_field"
         ],
         "analyzer":"fulltext"
      },
      "ecm:currentLifeCycleState":{
         "type":"keyword",
         "ignore_above":256
      },
      "ecm:isTrashed":{
         "type":"boolean"
      },
      "ecm:isVersion":{
         "type":"boolean"
      },
      "ecm:name":{
         "type":"keyword",
         "copy_to":[
            "all_field"
         ],
         "ignore_above":256
      },
      "ecm:path":{
         "type":"keyword",
         "fields":{
            "children":{
               "type":"text",
               "analyzer":"path_analyzer",
               "search_analyzer":"keyword"
            }
         }
      },
      "ecm:primaryType":{
         "type":"keyword",
         "ignore_above":256
      },
      "ecm:repository":{
         "type":"keyword",
         "ignore_above":256
      },
      "ecm:uuid":{
         "type":"keyword",
         "ignore_above":256
      },
      "file:content":{
         "properties":{
            "digest":{
               "type":"keyword",
               "ignore_above":256
            },
            "encoding":{
               "type":"keyword",
               "ignore_above":256
            },
            "length":{
               "type":"long"
            },
            "mime-type":{
               "type":"keyword",
               "ignore_above":256
            },
            "name":{
               "type":"keyword",
               "copy_to":[
                  "all_field"
               ],
               "ignore_above":256
            }
         }
      }
   }
}